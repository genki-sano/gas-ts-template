{
  "name": "gas-ts-template",
  "version": "0.0.1",
  "description": "This repository is a template to develop a GoogleAppsScript project with TypeScript.",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack",
    "deploy": "yarn run build && yarn run clasp push"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-decorators": "^7.7.4",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-typescript": "^7.7.4",
    "@google/clasp": "^2.3.0",
    "@line/bot-sdk": "^7.0.0",
    "@types/google-apps-script": "^1.0.7",
    "babel-loader": "^8.0.6",
    "es3ify-webpack-plugin": "^0.1.0",
    "gas-webpack-plugin": "^1.0.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "typescript": "^3.7.3",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "lint-staged": {
    "*.{ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  }
}
